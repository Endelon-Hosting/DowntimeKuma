@page "/"
@namespace DowntimeKuma.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;

    Response.Headers.Add("Server", "DowntimeKuma");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(DKControll.Configuration.Label) - DowntimeKuma</title>
    <base href="~/" />

    <meta name="title" content="@(DKControll.Configuration.Label) - DowntimeKuma">
    <meta name="description" content="Monitor your services using DowntimeKuma">
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <script src="_framework/blazor.server.js"></script>
</body>
</html>
